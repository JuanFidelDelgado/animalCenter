<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/backgroundsintr"
    tools:context=".view.ui.fragments.AdicionarMascotaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/logoanimalcenternombre">
        </ImageView>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar mascota"
        android:fontFamily="@font/playfairdisplayregular"
        android:textSize="48dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:textColor="@color/color3"
        >
    </TextView>

    <ImageView
        android:id="@+id/fotoMascota"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/camara"
        android:layout_marginTop="150dp"
        >
    </ImageView>

    <Button
        android:id="@+id/btnCamaraMascota"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/btnborderstyle"
        android:backgroundTint="@color/color3"
        android:text="Cámara"
        android:textColor="@color/white"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btnGaleriaMascota"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="250dp"
        android:background="@drawable/btnborderstyle"
        android:backgroundTint="@color/color3"
        android:text="Galería"
        android:textStyle="bold"></Button>

    <EditText
        android:id="@+id/txtNombreMascotaRegistro"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color1"
        android:ems="10"
        android:fontFamily="@font/playfairdisplayregular"
        android:hint="  Nombre"
        app:layout_constraintTop_toTopOf="@+id/imageLogo"
        tools:ignore="MissingConstraints">
    </EditText>

    <EditText
        android:id="@+id/txtEspecieRegistro"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color1"
        android:ems="10"
        android:fontFamily="@font/playfairdisplayregular"
        android:hint="  Especie"
        tools:ignore="MissingConstraints">
    </EditText>

    <EditText
        android:id="@+id/txtRazaRegistro"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color1"
        android:ems="10"
        android:fontFamily="@font/playfairdisplayregular"
        android:hint="  Raza"
        tools:ignore="MissingConstraints">
    </EditText>

    <EditText
        android:id="@+id/txtFechaNacimientoRegistro"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color1"
        android:ems="10"
        android:fontFamily="@font/playfairdisplayregular"
        android:hint="  Edad"
        tools:ignore="MissingConstraints">
    </EditText>

    <Button
        android:id="@+id/btnRegistrarMascota"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btnborderstyle"
        android:fontFamily="@font/playfairdisplayregular"
        android:text="Registrar mascota"
        android:textColor="@color/color3"
        android:textStyle="bold"
        app:backgroundTint="@color/color1"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintTop_toBottomOf="@+id/txtFechaNacimientoRegistro"
        tools:ignore="MissingConstraints" />


</FrameLayout>