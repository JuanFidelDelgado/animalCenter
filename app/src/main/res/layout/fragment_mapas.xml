<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundsintr"
    tools:context=".view.ui.fragments.mapasFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/logoanimalcenternombre"></ImageView>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuestra ubicaciÃ³n"
        android:fontFamily="@font/playfairdisplayregular"
        android:textSize="48dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:textColor="@color/color3"
        >

    </TextView>

    <fragment

        android:id="@+id/map_view"
        android:layout_width="370dp"
        android:layout_height="450dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="180dp"
        android:name="com.google.android.gms.maps.SupportMapFragment">
    </fragment>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationBarMapas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="700dp"
        android:background="@color/color1"
        android:backgroundTint="@color/color2"
        app:backgroundTint="@color/color2"
        app:menu="@menu/menu_navigation_bar">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</FrameLayout>