    <EditText
        android:id="@+id/txtNombresRegistro"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:background="@color/color1"
        android:ems="10"
        android:fontFamily="@font/playfairdisplayregular"
        android:hint="  Nombres"
        app:boxCornerRadiusBottomEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageLogo"
        tools:ignore="MissingConstraints">
    </EditText>

    <EditText
        android:id="@+id/txtApellidosRegistro"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="360dp"
        android:background="@color/color1"
        android:ems="10"
        android:fontFamily="@font/playfairdisplayregular"
        android:hint="  Apellidos"
        app:boxCornerRadiusBottomEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageLogo"
        tools:ignore="MissingConstraints">
    </EditText>

    <EditText
        android:id="@+id/txtCelularRegistro"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="420dp"
        android:background="@color/color1"
        android:ems="10"
        android:fontFamily="@font/playfairdisplayregular"
        android:hint="  Celular"
        app:boxCornerRadiusBottomEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageLogo"
        tools:ignore="MissingConstraints">
    </EditText>

    <EditText
        android:id="@+id/txtEmailRegistro"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="480dp"
        android:background="@color/color1"
        android:ems="10"
        android:fontFamily="@font/playfairdisplayregular"
        android:hint="  Email"
        app:boxCornerRadiusBottomEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageLogo"
        tools:ignore="MissingConstraints">
    </EditText>

    <EditText
        android:id="@+id/txtDireccionRegistro"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="540dp"
        android:background="@color/color1"
        android:ems="10"
        android:fontFamily="@font/playfairdisplayregular"
        android:hint="  Dirección"
        app:boxCornerRadiusBottomEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageLogo"
        tools:ignore="MissingConstraints">
    </EditText>

    <EditText
        android:id="@+id/txtContrasenaRegistro"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="600dp"
        android:background="@color/color1"
        android:ems="10"
        android:fontFamily="@font/playfairdisplayregular"
        android:hint="  Contraseña"
        app:boxCornerRadiusBottomEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageLogo"
        app:endIconMode="password_toggle"
        tools:ignore="MissingConstraints">
    </EditText>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btnborderstyle"
        android:fontFamily="@font/playfairdisplayregular"
        android:text="Registrarse"
        android:textColor="@color/color3"
        android:textStyle="bold"
        app:backgroundTint="@color/color1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContrasenaRegistro"
        tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>