<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_mascotas"
    android:layout_margin="15dp"
    app:cardBackgroundColor="@color/color1"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/foto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        </ImageView>
        <TextView
            android:id="@+id/nombreCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto"
            android:layout_toRightOf="@+id/foto"
            android:textColor="@color/white"
            android:text="Nombre:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            >
        </TextView>
        <TextView
            android:id="@+id/especie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto"
            android:layout_toRightOf="@+id/foto"
            android:layout_below="@id/nombreCita"
            android:textColor="@color/white"
            android:text="Especie:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            >
        </TextView>
        <TextView
            android:id="@+id/raza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto"
            android:layout_toRightOf="@+id/foto"
            android:layout_below="@id/especie"
            android:textColor="@color/white"
            android:text="Raza:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            >
        </TextView>

        <TextView
            android:id="@+id/edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto"
            android:layout_toRightOf="@+id/foto"
            android:layout_below="@id/raza"
            android:textColor="@color/white"
            android:text="Edad:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            >
        </TextView>

        <TextView
            android:id="@+id/btnCita"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@id/nombreCita"
            android:layout_marginTop="35dp"
            android:background="@color/color3"
            android:src="@drawable/ic_cita"
            android:text="Enviar a consulta"></TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>